<% provide :title, t("home.title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t("micropost.title") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t("home.welcome_message") %></h1>

    <h2><%= t("home.sample_app_description") %></h2>
    <h2> <%= t("home.welcome_message") %></h2>
    <%= link_to t("home.tutorial_link"), "http://www.railstutorial.org" %>
    <%= link_to t("home.signup_button"), "/signup", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
