<% provide :title, t("sign_up") %>
<h1><%= t("sign_up") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path, html: { class: "form-horizontal" } do |f| %>
      <%= render partial: "shared/error_messages" %>
      
      <div class="form-group">
        <%= f.label :name, t("name"), class: "control-label col-sm-3" %>
        <div class="col-sm-9">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :email, t("email"), class: "control-label col-sm-3" %>
        <div class="col-sm-9">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :password, t("password"), class: "control-label col-sm-3" %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, t("confirmation"), class: "control-label col-sm-3" %>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.submit t("create_my_account"), class: "btn btn-primary" %>
        </div>
      </div>
      
    <% end %>
  </div>
</div>