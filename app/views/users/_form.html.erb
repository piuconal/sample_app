<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: @user %>
  <%= f.label :name, t("flash.users.edit.form.name") %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email, t("flash.users.edit.form.email") %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :password, t("flash.users.edit.form.password") %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t("flash.users.edit.form.password_confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
