<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to t("navbar.brand"), "#", id: "logo", class: "navbar-brand" %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-content">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="navbar-content">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t('navbar.english'), locale: "en", class: "nav-link" %></li>
        <li><%= link_to t('navbar.vietnamese'), locale: "vi", class: "nav-link" %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('navbar.home'), root_path, class: "nav-link" %></li>
        <li><%= link_to t('navbar.help'), "/static_pages/help", class: "nav-link" %></li>

        <% if logged_in? %>
          <li><%= link_to t("header.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle", "data-toggle" => "dropdown"} do %>
              <%= t "header.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("header.logout"), logout_path, data: { turbo_method: :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("header.login"), login_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
